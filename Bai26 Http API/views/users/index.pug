extends ../layouts/common.pug

block content
  h1 
    span.mr-2 Users
    a.btn.btn-primary(href="/users/create") New
  .d-flex.align-items-center
    
    form.d-flex.mt-3.ml-auto(action="/users/search")
          input#name.form-control(type='text') 
          button.btn.btn-primary.ml-2(type="submit") Search

  table.table
    tr
      th Avatar
      th Name
      th Phone
      th Actions

    each user in users
      tr
        td
          img(src=user.avatar, width=32)
        td= user.name
        td= user.phone
        td
          a.btn.btn-light.mr-2(href="/users/view/"+user.id) View

          a.btn.btn-danger(href="/users/"+user.id+"/delete") Delete